{
  "manifest_version": 3,
  "name": "Use Capture",
  "version": "0.0.1",
  "description": "A Chrome extension to capture images from Youtube videos.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "host_permissions": ["https://youtube.com/*"],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
